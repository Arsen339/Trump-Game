#Setting up the module
import pygame
pygame.init()

#Setting the display
win =pygame.display.set_mode((500, 500))
pygame.display.set_caption("Cubes game")

#constants 
x = 50
y = 425
width = 40
height = 60
speed = 5
isJump = False
JumpCount = 10

run  = True
while run:
    #Repeating in MS
    pygame.time.delay(50)
    #Out when close
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False

    #Creating the character
    pygame.draw.rect(win, (0,0,255), (x, y, width, height))
    pygame.display.update()
    
    #KeyPad
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and x > 5:
        x -= speed
    if keys[pygame.K_RIGHT] and x < 500-5-width:
        x += speed
    if not(isJump):
        if keys[pygame.K_UP] and y > 5:
            y -= speed
        if keys[pygame.K_DOWN] and y < 500 - height-5:
            y += speed
        if keys[pygame.K_SPACE]:
            isJump = True 
    else:
        #Poraboloid jump
        if JumpCount >=-10:
            if JumpCount < 0:
                 y += (JumpCount ** 2) / 2
            else:
                y -= (JumpCount ** 2) / 2
            JumpCount -= 1 
        else:
            isJump = False
            JumpCount = 10
    
    #Repaint the window
    win.fill((0,0,0))

pygame.quit()









